{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/increment-referral",
      "dest": "/api/increment-referral"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    }
  ],
  "env": {
    "GHL_API_KEY": "@ghl_api_key",
    "GHL_LOCATION_ID": "@ghl_location_id"
  }
}